/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "baseUrl": "./src",
    "paths": {
      "~app/*": ["app/*"],
      "~models/*": ["app/models/*"],
      "~modules/*": ["app/modules/*"],
      "~services/*": ["app/services/*"],
      "~utils/*": ["app/utils/*"],
      "~components/*": ["app/components/*"],
      "~environments": ["environments/environment"],
      "~guards/*": ["app/guards/*"]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
